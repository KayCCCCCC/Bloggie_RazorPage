@page
@model Bloggie.Pages.RegisterModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-sm-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-5 mb-3 h3">Register</h1>
            <partial name="_Notification"></partial>
            <form method="post">

                <div class="mb-3">
                    <label class="form-label">UserName</label>
                    <input type="text" class="form-control" asp-for="RegisterViewModel.UserName" required/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="RegisterViewModel.Email" required/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="RegisterViewModel.Password" required/>
                </div>

                <div class="mb-3">
                    <button class="btn bg-dark text-light" type="submit">Register</button>
                </div>

            </form>
        </div>
    </div>
</div>